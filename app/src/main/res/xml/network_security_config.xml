<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- This domain tag allows cleartext traffic to 10.0.2.2 (emulator).
         You can also specify your local machine's IP or wildcard. -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.1.3</domain>
    </domain-config>

    <!-- If you want to allow cleartext for all domains (not recommended for production), you can do:
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">example.com</domain>
    </domain-config>
    -->
</network-security-config>